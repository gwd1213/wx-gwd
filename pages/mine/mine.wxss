page{
  height: 100%;
  background-color: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userInfo {
  padding-top: 20px;
  display: flex;
  height: 200px;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 25px;
}
.userImg {
  width: 100px;
  height: 100px;
  display: block;
  border-radius: 50%;
  overflow: hidden;
}
.my-map {
  width: 100%;
  height: 300px;
  position: fixed;
  bottom: 0;
  left: 0;
}
.my-map map{
  width: 100%;
  height: 300px;
}