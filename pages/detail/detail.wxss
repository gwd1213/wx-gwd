page,.detail {
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column
}
.detail-content {
  flex: 1;
}
.detail-content-img image{
  width: 100%;
  height: 300px;
}
.detail-content-title {
  color: rgb(20, 121, 0);
  font-size: 20px;
  font-weight: bolder;
  padding: 10px;
}
.detail-content-price {
  color: #f53c3c;
  font-size: 30px;
  padding: 10px;
}
.detail-content-text {
  color: #666;
  padding: 10px;
  line-height: 20px;
}
.detail-btn {
  color: #fff;
  background-color: #e94f4f;
  border-radius: 5px;
  font-size: 18px;
  text-align: center;
  height: 50px;
  line-height: 50px;
}